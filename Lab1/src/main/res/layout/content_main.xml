<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="co.edu.udea.compumovil.gr01_20172.lab1.Activities.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/marginTi"
            android:text="@string/welcome"
            android:textSize="@dimen/sizeTi"
            android:padding="@dimen/marginFi"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"/>

        <ImageView
            android:id="@+id/imageUser"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m10"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="@dimen/m10"
                android:layout_marginTop="@dimen/m10"
                android:hint="@string/names2"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m10"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/m10"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelUserLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m10"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="@dimen/m10"
                android:layout_marginTop="@dimen/m10"
                android:hint="@string/lastNames2"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m10"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/m10"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelUserSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m10"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="@dimen/m10"
                android:layout_marginTop="@dimen/m10"
                android:hint="@string/sex"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m10"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/m10"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelUserBirthDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m10"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="@dimen/m10"
                android:layout_marginTop="@dimen/m10"
                android:hint="@string/fecha_nacimiento2"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userBirthDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m10"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/m10"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelUserTelephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m10"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="@dimen/m10"
                android:layout_marginTop="@dimen/m10"
                android:hint="@string/phone2"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userTelephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m10"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/m10"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelUserAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m10"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="@dimen/m10"
                android:layout_marginTop="@dimen/m10"
                android:hint="@string/address2"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m10"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/m10"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:hint="@string/mail2"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:layout_alignBaseline="@+id/userEmail"
                android:layout_alignBottom="@+id/userEmail"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="13dp" />

            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m10"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/m10"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelUserCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m10"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="@dimen/m10"
                android:layout_marginTop="@dimen/m10"
                android:hint="@string/city2"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m10"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/m10"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>