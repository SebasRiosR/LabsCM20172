<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nested_scroll_view_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="co.edu.udea.compumovil.gr01_20172.lab1.Activities.DataUpdate"
    tools:showIn="@layout/app_bar_data_update">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        android:weightSum="1"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/marginTi"
            android:text="@string/updateA"
            android:textSize="@dimen/sizeTi"
            android:padding="@dimen/marginFi"
            android:gravity="center"
            android:textColor="@color/colorAccent"/>

        <ImageButton
            android:id="@+id/buttonImageUpdate"
            android:layout_width="150dip"
            android:layout_height="150dip"
            app:srcCompat="@drawable/ic_photo"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutEmailUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorAccent"
            android:layout_marginTop="1dp">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:id="@+id/etEmailUpdate"
                android:hint="@string/mail"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:layout_marginRight="@dimen/m10"
                android:layout_marginLeft="@dimen/m10"
                android:layout_gravity="center_horizontal"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutNameUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorAccent"
            android:layout_marginTop="1dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/etNameUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m10"
                android:layout_marginRight="@dimen/m10"
                android:hint="@string/names"
                android:inputType="textCapWords|textNoSuggestions"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutLastNameUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorAccent"
            android:layout_marginTop="1dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/etLastNameUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords|textNoSuggestions"
                android:hint="@string/lastNames"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:layout_marginRight="@dimen/m10"
                android:layout_marginLeft="@dimen/m10"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputPhoneUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorAccent"
            android:layout_marginTop="1dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/etPhoneUpdate"
                android:layout_width="364dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:hint="@string/phone"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:layout_marginRight="@dimen/m10"
                android:layout_marginLeft="@dimen/m10"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputAddressUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorAccent"
            android:layout_marginTop="1dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/etAddressUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m10"
                android:layout_marginRight="@dimen/m10"
                android:hint="@string/address"
                android:inputType="textNoSuggestions"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutCityUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorAccent"
            android:layout_marginTop="1dp">
            <android.support.v7.widget.AppCompatAutoCompleteTextView
                android:id="@+id/etCityUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoComplete"
                android:hint="@string/city"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:layout_marginRight="@dimen/m10"
                android:layout_marginLeft="@dimen/m10"/>
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/m10"
            android:layout_marginTop="@dimen/m5"
            android:layout_marginLeft="@dimen/m14">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/size18"
                android:text="@string/sex"
                android:layout_marginRight="@dimen/m5"/>
            <RadioGroup
                android:id="@+id/groupBUpdate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radioB1Update"
                    android:textColor="@color/colorAccent"
                    android:buttonTint="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/male"/>
                <RadioButton
                    android:id="@+id/radioB2Update"
                    android:textColor="@color/colorAccent"
                    android:buttonTint="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/female"/>
                <RadioButton
                    android:id="@+id/radioB3Update"
                    android:textColor="@color/colorAccent"
                    android:buttonTint="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/other"/>
            </RadioGroup>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fechaStringUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m10"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="@dimen/m10"
                android:layout_marginTop="@dimen/m10"
                android:backgroundTint="@color/colorAccent"
                android:hint="@string/fecha_nacimiento"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:textSize="@dimen/size18" />

            <Button
                android:id="@+id/botonCalendarioUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border"
                android:drawableLeft="@drawable/ic_date"
                android:paddingLeft="@dimen/m5"
                android:paddingRight="@dimen/m5"
                android:paddingStart="@dimen/m5"
                android:text="@string/date_select"
                android:textColor="@color/colorAccent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/m10"/>
        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutPassUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorAccent"
            android:layout_marginTop="1dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/etPassUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="@string/pass"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:fontFamily="sans-serif"
                android:layout_marginRight="@dimen/m10"
                android:layout_marginLeft="@dimen/m10"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutPass2Update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorAccent"
            android:layout_marginTop="1dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/etPass2Update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="@string/cPass"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:fontFamily="sans-serif"
                android:layout_marginRight="@dimen/m10"
                android:layout_marginLeft="@dimen/m10" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/btnRegUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/updateTextButton"
            android:layout_marginBottom="@dimen/m10"
            android:layout_marginRight="@dimen/m10"
            android:layout_marginLeft="@dimen/m10"
            android:onClick="actualizar"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
